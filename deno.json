{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-all npm:vite",
    "build": "deno run --allow-all npm:imba build src/main.imba --outdir public --minify",
    "preview": "deno run --allow-all npm:vite preview"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "imports": {
    "vite": "npm:vite@^6.3.1",
    "imba": "npm:imba@latest"
  }
}